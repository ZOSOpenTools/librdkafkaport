# bump: librdkafka-version /librdkafka_VERSION="(.*)"/ https://github.com/confluentinc/librdkafka.git|semver:^2
LIBRDKAFKA_VERSION="2.2.0"
OS_TARGET="zosv2r4"

export ZOPEN_DEV_URL="https://github.com/confluentinc/librdkafka.git"
export ZOPEN_DEV_DEPS="git curl make pkgconfig openssl sed grep coreutils zoslib zlib zstd lz4 getopt"
export ZOPEN_BUILD_LINE="DEV"
export ZOPEN_RUNTIME_DEPS="bash"
export ZOPEN_COMP="clang"

export ZOPEN_EXTRA_CFLAGS="-Wno-error -mzos-target=${OS_TARGET} -I../src"

export ZOPEN_EXTRA_CPPFLAGS="-D_OPEN_SYS_SOCK_IPV6 -D_UNIX03_SOURCE -D_UNIX03_THREADS -D_XOPEN_SOURCE_EXTENDED=1 -D_POSIX_C_SOURCE=200112L -D_POSIX_SOURCE -DPOSIX_SIGNALS -mzos-target=${OS_TARGET} -I../src-cpp"

#export LIBS="-L/u/ibmuser/zopen/prod/zoslib/lib -L/u/ibmuser/zopen/prod/openssl/lib -L/u/ibmuser/zopen/prod/zstd/lib -L/u/ibmuser/zopen/prod/lz4/lib -L../src -lzoslib -lrdkafka -llz4 -lzstd -lcrypto -lssl -lzoslib-supp"
export LIBS="-L../src"

export ZOPEN_CONFIGURE_OPTS="--prefix=\$ZOPEN_INSTALL_DIR --CPPFLAGS=\"\$CPPFLAGS\" --CFLAGS=\"\$CFLAGS\" --LDFLAGS=\"\$LDFLAGS\""

export ZOPEN_CONFIGURE_MINIMAL=yes

zopen_check_results()
{
  #this will be done once we have the test compilation issue resolved
  dir="$1"
  pfx="$2"
  chk="$1/$2_check.log"

  # Echo the following information to gauge build health
  echo "actualFailures:0"
  echo "totalTests:1"
  echo "expectedFailures:0"
  echo "expectedTotalTests:1"
}

zopen_append_to_env()
{

cat <<ZZ
if [ ! -z "\$ZOPEN_IN_ZOPEN_BUILD" ]; then 
export ZOPEN_EXTRA_CFLAGS="\${ZOPEN_EXTRA_CFLAGS} -I\$PWD/include" 
export ZOPEN_EXTRA_CXXFLAGS="\${ZOPEN_EXTRA_CXXFLAGS} -I\$PWD/include" 
export ZOPEN_EXTRA_LDFLAGS="\${ZOPEN_EXTRA_LDFLAGS} -L\$PWD/lib" 
export ZOPEN_EXTRA_LIBS="\${ZOPEN_EXTRA_LIBS} -llibrdkafka"
fi
ZZ

}

zopen_append_to_setup()
{
  # echo commands that will run when installing via setup.sh
}

zopen_get_version()
{
  echo "$LIBRDKAFKA_VERSION"
}
